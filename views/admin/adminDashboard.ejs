<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1.0" />
    <title>Admin Dashboard</title>

    <!-- Bootstrap CDN -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet" />

    <!-- Custom CSS -->
    <style>
      body {
        background-color: #f8f9fa;
      }
      .container {
        margin-top: 30px;
      }
      .table img {
        max-width: 80px;
        height: auto;
        border-radius: 5px;
      }
      .card {
        border-radius: 10px;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
      }
    </style>
  </head>
  <body>
    <div class="container">
      <h2 class="text-center mb-4">Admin Dashboard</h2>
      <% if (messages.success && messages.success.length > 0) { %>
      <div class="alert alert-success"><%= messages.success %></div>
      <% } %> <% if (messages.error && messages.error.length > 0) { %>
      <div class="alert alert-danger"><%= messages.error %></div>
      <% } %>
      <!-- Product Upload Form -->
      <div class="card p-4 mb-4">
        <h4 class="mb-3">Upload a New Product</h4>
        <form
          action="/uploadProduct"
          method="POST"
          enctype="multipart/form-data">
          <div class="mb-3">
            <label
              for="name"
              class="form-label"
              >Product Name</label
            >
            <input
              type="text"
              class="form-control"
              name="name"
              required />
          </div>

          <div class="mb-3">
            <label
              for="image"
              class="form-label"
              >Product Image</label
            >
            <input
              type="file"
              class="form-control"
              name="image"
              accept="image/*"
              required />
          </div>

          <div class="mb-3">
            <label
              for="category"
              class="form-label"
              >Category</label
            >
            <input
              type="text"
              class="form-control"
              name="category"
              required />
          </div>

          <div class="mb-3">
            <label
              for="description"
              class="form-label"
              >Description</label
            >
            <textarea
              class="form-control"
              name="description"
              rows="3"
              required></textarea>
          </div>

          <button
            type="submit"
            class="btn btn-primary w-100">
            Upload Product
          </button>
        </form>
      </div>

      <!-- Product List -->
      <div class="card p-4">
        <h4 class="mb-3">Product List</h4>
        <table class="table table-bordered table-striped">
          <thead class="table-dark">
            <tr>
              <th>Product ID</th>
              <th>Name</th>
              <th>Image</th>
              <th>Category</th>
              <th>Description</th>
            </tr>
          </thead>
          <tbody>
            <% if (products && products.length > 0) { %> <%
            products.forEach(product => { %>
            <tr>
              <td><%= product.productID %></td>
              <td><%= product.name %></td>
              <td>
                <% if (product.image) { %>
                <img
                  src="<%= product.image %>"
                  width="80" />
                <% } else { %> No Image <% } %>
              </td>
              <td><%= product.category %></td>
              <td><%= product.description %></td>
            </tr>
            <% }) %> <% } else { %>
            <tr>
              <td
                colspan="5"
                class="text-center">
                No products available
              </td>
            </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>

    <!-- Bootstrap JS for interactivity (optional) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
